{
  "manifest_version": 3,
  "name": "Simple Flashcards",
  "version": "1.0",
  "description": "Create flashcards from highlighted text",
  "permissions": ["activeTab", "storage"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+O"
      },
      "description": "Create flashcard from selection"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 